<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyp.mapper.UserMapper">
	<insert id="insertDriver" parameterType="driver">
		<selectKey resultType="String" keyProperty="id" order="BEFORE">
			select replace(uuid(),'-','') from dual
		</selectKey>
		INSERT into `user`(id,name,sex,number,driving,age)
		VALUES(#{id},#{name},#{sex},#{number},#{driving},#{age})
	</insert>
	<select id="driverlist" parameterType="com.zyp.util.Pagination" resultType="driver">
		SELECT * FROM `driver` u
		limit #{skipNum},#{takeNum}
	</select>
	<select id="drivercount" parameterType="com.zyp.util.Pagination" resultType="int">
		SELECT count(1) FROM `driver` u
		limit #{skipNum},#{takeNum}
	</select>
</mapper>